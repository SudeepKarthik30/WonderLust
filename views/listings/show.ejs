<% (layout("/layouts/boilerPlate")) %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%=listData.title%><br></h3>
    </div>
    <div class="card col-6 offset-3 show-card  listing-card">
        <img src="<%=listData.image.url%>" class="card-img-top show-img" alt="...">
        <div class="card-body listing-card">
             <p class="card-text">Owned by : <i><%=listData.owner.username%></i></p>
             <p class="card-text"> <%=listData.description%></p>
             <p class="card-text"> &#8377;<%=listData.price.toLocaleString("en-IN")%></p>
             <p class="card-text"> <%=listData.location%> </p>
             <p class="card-text"><%=listData.country%></p>
        </div>
    </div>
  </div>

  <% if(currUser && listData.owner._id.equals(currUser._id)){ %>
     <div class="btns text-center offset-3">
      <a href="/listings/<%=listData._id%>/edit" class="btn btn-danger mx-2" style="width: 140px;">Edit</a>

      <form method="post" action="/listings/<%=listData._id%>?_method=DELETE" style="display: inline;">
        <button class="btn btn-dark" style="width: 100px;background-color: black !important;">Delete</button>
      </form>
  </div>
  <%}%>


<!-- Review -->


  <div class="col-8 offset-3 mb-3">
  <hr>
  <% if(currUser){ %>
  <h4>Leave a Review</h4>
  <form method="post" action="/listings/<%=listData._id%>/reviews" novalidate class="needs-validation">

 <div class="mb-3 mt-3">
    <label for="rating" class="form-label">Rating</label>
    <fieldset class="starability-slot">
    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
    <label for="first-rate1" title="Terrible">1 star</label>
    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
    <label for="first-rate2" title="Not good">2 stars</label>
    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
    <label for="first-rate3" title="Average">3 stars</label>
    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
    <label for="first-rate4" title="Very good">4 stars</label>
    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
    <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
 </div>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea 
        name="review[comment]" 
        id="comment" 
        cols="30" 
        rows="5" 
        class="form-control"
        required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
    </div>
    <br>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
<% } %>


<p><b>All Reviews</b></p>
<div class="row">
<%for(review of listData.reviews){%>
   <div class="card col-5 ms-3 mb-3">
    <div class="card-body">
      <h5 class="card-title">@<%=review.author.username%></h5>
      <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
     <p class="card-text"><%=review.comment%></p>
     <form method="post" action="/listings/<%=listData._id%>/reviews/<%=review._id%>?_method=delete">
      <button class="btn btn-sm btn-dark mb-2" style="width: 100px;background-color: black !important;">Delete</button>
     </form>
    </div>
   </div>
    <br>
<%}%>
</div>
</div>

